extends ./layout.jade
//block vars
  - var title = 'Home'
  

block content
      #map-section.container-fluid.degrade
        .row
          .col-md-8.col-md-offset-2
            .page-header
              h1
                | Bienvenue 
                small Simplyk
              h2
                small Que tu sois un citoyen ou un organisme en recherche de bénévoles, rejoins-nous !
            if error
              p.alert.alert-danger ERROR : #{error}
        |       
        .row
          .col-md-4.col-md-offset-2
            .page-header
              h3 Connexion
            |           
            .input-group.conn-input
              .btn-group.conn-input(role='group')
                .conn-input
                  button.btn.btn-default(form='conn-cit-form', type='button')
                    a.btn-default(href='login') On se connecte
          .col-md-4
            .page-header
              h3 Créer un compte
            |           
            .input-group.conn-input
              .btn-group.conn-input(role='group')
                .conn-input
                  button#cit-creat-account.btn.btn-default(form='conn-cit-form')
                    a.btn-default(href='register') Rentre dans l'aventure
script(type='text/javascript').
